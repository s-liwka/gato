<Tab>:
    size_hint: 1, 1
    pos_hint: {'center_x': .5, 'center_y': .5} 
    do_default_tab: False

    # Create tab 1 
    TabbedPanelItem: 
        text: 'Home'
        # floating layout that definietly wont break when fullscreened
        FloatLayout:

            ScrollView:
                size_hint: 0.7, 0.7
                pos: (20,110)
                canvas.before:
                    Color:
                        rgba: (0, 0, 0, 0.7)
                    Rectangle:
                        pos: (0,0)
                        size: root.width, root.height
                Label:
                    id: console
                    color: (1, 1, 1, 1)
                    halign: 'left'
                    valign: 'top'
                    text_size: self.size
                    size_hint_y: 1
                    size_hint_max_y: 99999
                    height: 400
            
            Button:
                text: "Start"
                size_hint: (.2, .1)
                pos: (612, 400)
                on_release: root.start_bot()
            Button:
                text: "Stop"
                size_hint: (.2, .1)
                pos: (612, 160)
                on_release: root.stop_bot()
            Button:
                text: "Restart"
                size_hint: (.2, .1)
                pos: (612, 280)
                on_release: root.restart_bot()
  
  
    TabbedPanelItem:
        text: 'Config'
        GridLayout:
            cols: 2
            row: 4


            CheckBox:
                id: msglgrcb
            Label:
                text: "Message Logger"


            CheckBox:
                id: sncb
            Label:
                text: "Nitro Sniper"

            CheckBox:
                id: prcb
            Label:
                text: "Profanity Tracker (does nothing atm)"
        
            CheckBox:
                id: dacb
            Label:
                text: "Prompt for destructive actions"

            TextInput:
                id: dati
            Label:
                text: "Message delete time (MUST BE A NUMBER OR EMPTY)"

            TextInput:
                id: prti
                hint_text: "Prefix"
            Label:
                text: "Prefix"


            TextInput:
                id: tkti
                hint_text: "Token"
            Label:
                text: "Token (Will get encrypted)"


            Button:
                text: "Save & Restart"
                on_release: root.save_config()
            Label:
                text: "ui design is my passion"


    TabbedPanelItem: 
        text: 'About'
        Label:
            text: "haiiii!!!!\nGNU GPL v3\nmade by sliwka :3"
